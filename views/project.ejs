<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@3.0.0/dist/full.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body class="bg-base-100 text-base-content">
    <%- include('partials/navbar', { page: '/solutions/projects' }) %>
    
    <div class="container mx-auto p-4">
        <!-- Hero Section -->
        <div class="hero bg-base-200 rounded-lg p-8 mb-8">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">Projects</h1>
                    <p class="py-6">Browse our climate solutions projects</p>
                    <div class="flex justify-center gap-4">
                        <a href="/solutions/projects?sector=Industry" class="btn btn-primary">Industry</a>
                        <a href="/solutions/projects?sector=Transportation" class="btn btn-secondary">Transportation</a>
                        <a href="/solutions/projects?sector=Electricity" class="btn btn-accent">Electricity</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Projects Table -->
        <div class="overflow-x-auto">
            <table class="table table-zebra w-full">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Sector</th>
                        <th>Summary</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% projects.forEach(project => { %>
                    <tr>
                        <td><%= project.title %></td>
                        <td>
                            <a href="/solutions/projects?sector=<%= project.Sector.sector_name %>" 
                               class="badge badge-outline hover:badge-primary">
                                <%= project.Sector.sector_name %>
                            </a>
                        </td>
                        <td><%= project.summary_short %></td>
                        <td>
                            <a href="/solutions/projects/<%= project.id %>" 
                               class="btn btn-sm btn-info mr-2">
                                Details
                            </a>
                            <a href="/solutions/editProject/<%= project.id %>" 
                               class="btn btn-sm btn-warning">
                                Edit
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>