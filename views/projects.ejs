<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body class="bg-gray-900 text-white">
    <%- include('partials/navbar', { page: "/solutions/projects" }) %>

    <div class="container mx-auto py-12 text-center">
        <div class="hero">
            <h1 class="text-3xl font-bold">Projects</h1>
            <p class="text-gray-400 mt-16">Browse our current collection of projects.</p>
        </div>
    </div>

    <section class="max-w-4xl mx-auto bg-gray-800 p-8 rounded-lg shadow-lg">
        <div class="flex justify-center gap-4 mb-8">
            <a href="/solutions/projects?sector=Industry" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Industry</a>
            <a href="/solutions/projects?sector=Transportation" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Transportation</a>
            <a href="/solutions/projects?sector=Electricity" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Electricity</a>
        </div>

        <table class="w-full">
            <thead>
                <tr class="bg-gray-700">
                    <th class="text-left p-4">Title</th>
                    <th class="text-left p-4">Sector</th>
                    <th class="text-left p-4">Summary</th>
                    <th class="text-left p-4">Details</th>
                </tr>
            </thead>
            <tbody>
                <% projects.forEach(project => { %>
                    <tr class="hover:bg-gray-700 border-b border-gray-600">
                        <td class="p-4"><%= project.title %></td>
                        <td class="p-4">
                            <a href="/solutions/projects?sector=<%= project.sector %>" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded">
                                <%= project.sector %>
                            </a>
                        </td>
                        <td class="p-4"><%= project.summary_short %></td>
                        <td class="p-4">
                            <a href="/solutions/projects/<%= project.id %>" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                                Details
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </section>
</body>
</html>