<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Project</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body class="bg-gray-900 text-white">
    <%- include('partials/navbar', { page: '/solutions/addProject' }) %>

    <div class="container mx-auto py-12">
        <div class="max-w-4xl mx-auto bg-gray-800 p-8 rounded-lg shadow-lg">
            <h1 class="text-3xl font-bold mb-6">Add New Project</h1>
            
            <form action="/solutions/addProject" method="POST">
                <div class="grid grid-cols-1 gap-6">
                    <!-- Form fields here -->
                    <div>
                        <label class="block mb-2">Title</label>
                        <input type="text" name="title" required class="w-full p-2 bg-gray-700 rounded">
                    </div>
                    
                    <div>
                        <label class="block mb-2">Image URL</label>
                        <input type="url" name="feature_img_url" required class="w-full p-2 bg-gray-700 rounded">
                    </div>
                    
                    <div>
                        <label class="block mb-2">Sector</label>
                        <select name="sector_id" required class="w-full p-2 bg-gray-700 rounded">
                            <% sectors.forEach(sector => { %>
                                <option value="<%= sector.id %>"><%= sector.sector_name %></option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <!-- Add other form fields similarly -->
                    
                    <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded">
                        Add Project
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>